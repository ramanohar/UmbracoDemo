@inherits Umbraco.Web.Mvc.UmbracoViewPage<UmbracoDemo.Models.ContactUsModel>

@using (Html.BeginUmbracoForm<UmbracoDemo.Controllers.ContactSurfaceController>("PostContactDetails"))
{
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Name</label>

            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder= "Name" })
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Email Address</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email Address" })
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Phone Number</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Phone Number" })
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Message</label>
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Message" })
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <br>
    <div id="success"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-secondary" id="sendMessageButton">Send</button>
    </div>

}